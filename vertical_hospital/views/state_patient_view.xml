<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_patient_state_tree" model="ir.ui.view">
            <field name="name">hospital.patient.state.tree</field>
            <field name="model">hospital.patient.state</field>
            <field name="arch" type="xml">
                <tree string="Patient States">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_patient_state_form" model="ir.ui.view">
            <field name="name">hospital.patient.state.form</field>
            <field name="model">hospital.patient.state</field>
            <field name="arch" type="xml">
                <form string="Patient State">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

 

    </data>
</odoo>
